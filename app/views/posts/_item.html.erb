<% @posts.each do |post| %>
    <div class="panel-group" id="post_<%= post.id %>">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#post_<%= post.id %>" href="#collapseOne">
              <%= link_to "@#{post.author}", "/users" %> <%= post.title %> 
            </a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in">
          <div class="panel-body" id="post_<%= post.id %>_text">
            <%= markdown_for post %>
            <hr/>
            <%= choice_created_or_updated_at_for post %>
            <% if user_signed_in? and current_user.name = post.author %>
              <%= link_to "Edit", edit_post_path(post)%>  |  
              <%= link_to "Comment", "/post/#{post.id}/comments/new"%> |
            <% end%>
            <%= link_to "Hear", "/post/#{post.id}/show"%>
          </div>
        </div>
      </div>
    </div>     
<% end %>
