<nav id="app">
  <%= coffeesound_js_tags %>
  
  <%= create_ace decompress_for(@code), :id => "coffee_editor" %>
  
  <%= create_terminal :rows=> 33, :id=> "termDiv", :editor => "coffee_editor", :custom_commands => {
    :run => {
      :help => "runs code embeeded on ace editor",
      :exec => "gac.run window.editor.getValue(), (err, js) -> if not err then (new Function(js))()"
    },
    :clean => {
      :help => "clean audio",
      :exec => "gac.clean (cleared) -> terminal.type cleared" 
    }
  } %>
</nav>

