<%= gibberails_include_tag() %>

<%= build_ace @post, :top => '6.5%', :left => '0%', :right => '49%', :bottom => '0%' %>

<div class="row">
  <div class="col-md-4 col-md-offset-6">
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title" data-toogle="collapse" data-parent="#accordion" href="#<%= @post.author %>_<%= @post.id %>_documentation"><%= @post.title %></h1>
          <div id="<%= @post.author %>_<%= @post.id %>_documentation" class="panel-collapse collapse">
            <div class="panel-body">
              <%= @post.author %><br/><%= @post.doc %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= integrate_gibberish_and_ace @post %>


