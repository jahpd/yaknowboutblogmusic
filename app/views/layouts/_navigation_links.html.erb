<% if user_signed_in? %>
  <% if @code %>
    <li id="render" role="button" class="btn-success"><a  method="post" action="hear">Render</button></a></li>
    <li id="stop" role="button" class="btn-danger"><a method="post" action="hear" >Stop</button></a></li>
  <% else %>
    <li><%= link_to 'Edit account', edit_user_registration_path %></li>
    <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
    <li><%= link_to 'My music posts', posts_path %></li>
    <li><%= link_to "About", "/" %></li>
  <% end %>
<% else %>
  <li type="button" class="active"><%= link_to "About", "/" %></li>
  <li type="button" class="btn-success "><%= link_to 'Login', new_user_session_path %></li>
  <li type="button" class="btn-danger"><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>

